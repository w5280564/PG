<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.MainActivity"
    tools:ignore="MissingConstraints">




    <ImageView
        android:id="@+id/imageView"
        android:layout_width="123dp"
        android:layout_height="123dp"
        android:layout_marginTop="150dp"
        android:background="@mipmap/logo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/QR_Tv"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/main_lable"
        android:drawableStart="@mipmap/smzz"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="扫码追踪"
        android:textColor="#444444"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/earlyWarning_Tv"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/main_lable"
        android:drawableStart="@mipmap/yjcl"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="预警分析"
        android:textColor="#444444"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/QR_Tv" />

    <TextView
        android:id="@+id/Statistics_Tv"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/main_lable"
        android:drawableStart="@mipmap/tjfx"
        android:visibility="invisible"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="统计分析"
        android:textColor="#444444"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/earlyWarning_Tv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/main_lable"
        android:drawableStart="@mipmap/smzz"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="拍照识别"
        android:textColor="#444444"
        android:visibility="invisible"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Statistics_Tv" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/maken_Con"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:visibility="invisible"
        android:layout_marginTop="15dp"
        android:background="@drawable/main_lable"
        app:layout_constraintEnd_toEndOf="@+id/Statistics_Tv"
        app:layout_constraintStart_toStartOf="@+id/Statistics_Tv"
        app:layout_constraintTop_toBottomOf="@+id/Statistics_Tv">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:background="@mipmap/camera_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/main_lable"
            android:gravity="center"
            android:text="拍照识别"
            android:textColor="#444444"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageView3" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>