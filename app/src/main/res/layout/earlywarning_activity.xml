<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sideslip_Con"
    tools:ignore="MissingConstraints">

    <com.example.pg.common.titlebar.CustomTitleBar
        android:id="@+id/title_bar"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:titleBarBackgroundColor="@color/app_main_color"
        app:titleBarLeftImg="@mipmap/icon_back"
        app:titleBarRightShowType="IMG"
        app:titleBarShowBottomLine="false"
        app:titleBarTitle="预警分析"
        app:titleColor="@color/white"/>

    <TextView

        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="客户名称"
        android:textColor="@color/text_color_444444"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_bar"
        app:layout_goneMarginStart="10dp" />

    <TextView
        android:id="@+id/customerName_Tv"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/base_gradual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="业务编码"
        android:textColor="@color/text_color_444444"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customerName_Tv"
        app:layout_goneMarginStart="10dp" />


    <TextView
        android:id="@+id/code_Tv"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="25dp"
        android:text="请选择"
        android:paddingStart="10dp"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:textColor="@color/text_color_6f6f6f"
        android:background="@drawable/base_gradual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


    <TextView
        android:id="@+id/search_Tv"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:textColor="@color/white"
        android:text="查询"
        android:gravity="center"
        android:background="@drawable/btn_bg"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/code_Tv" />



</androidx.constraintlayout.widget.ConstraintLayout>