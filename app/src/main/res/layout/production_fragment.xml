<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.pg.baseview.MyArrowItemView
        android:id="@+id/productNo_MyView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        app:arrowItemAvatarHeight="12dp"
        app:arrowItemContent=""
        app:arrowItemShowArrow="false"
        app:arrowItemShowAvatar="false"
        app:arrowItemTitle="SKU："
        app:arrowItemTitleColor="@color/text_color_444444"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.pg.baseview.MyArrowItemView
        android:id="@+id/productName_MyView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        app:arrowItemAvatarHeight="12dp"
        app:arrowItemContent=""
        app:arrowItemShowArrow="false"
        app:arrowItemShowAvatar="false"
        app:arrowItemTitle="产品名称"
        app:arrowItemTitleColor="@color/text_color_444444"
        app:layout_constraintTop_toBottomOf="@id/productNo_MyView" />

    <com.example.pg.baseview.MyArrowItemView
        android:id="@+id/PlantName_MyView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        app:arrowItemAvatarHeight="12dp"
        app:arrowItemContent=""
        app:arrowItemShowArrow="false"
        app:arrowItemShowAvatar="false"
        app:arrowItemTitle="工厂名称"
        app:arrowItemTitleColor="@color/text_color_444444"
        app:layout_constraintTop_toBottomOf="@id/productName_MyView" />

    <com.example.pg.baseview.MyArrowItemView
        android:id="@+id/plantCode_MyView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        app:arrowItemAvatarHeight="12dp"
        app:arrowItemContent=""
        app:arrowItemShowArrow="false"
        app:arrowItemShowAvatar="false"
        app:arrowItemTitle="工厂代码"
        app:arrowItemTitleColor="@color/text_color_444444"
        app:layout_constraintTop_toBottomOf="@id/PlantName_MyView" />

    <com.example.pg.baseview.MyArrowItemView
        android:id="@+id/lineCode_MyView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        app:arrowItemAvatarHeight="12dp"
        app:arrowItemContent=""
        app:arrowItemShowArrow="false"
        app:arrowItemShowAvatar="false"
        app:arrowItemTitle="生产线代码"
        app:arrowItemTitleColor="@color/text_color_444444"
        app:layout_constraintTop_toBottomOf="@id/plantCode_MyView" />

    <com.example.pg.baseview.MyArrowItemView
        android:id="@+id/agLevel_MyView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        app:arrowItemAvatarHeight="12dp"
        app:arrowItemContent=""
        app:arrowItemShowArrow="false"
        app:arrowItemShowAvatar="false"
        app:arrowItemTitle="包装等级"
        app:arrowItemTitleColor="@color/text_color_444444"
        app:layout_constraintTop_toBottomOf="@id/lineCode_MyView" />

    <com.example.pg.baseview.MyArrowItemView
        android:id="@+id/gtin_MyView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        app:arrowItemAvatarHeight="12dp"
        app:arrowItemContent=""
        app:arrowItemShowArrow="false"
        app:arrowItemShowAvatar="false"
        app:arrowItemTitle="GTIN"
        app:arrowItemTitleColor="@color/text_color_444444"
        app:layout_constraintTop_toBottomOf="@id/agLevel_MyView" />

    <com.example.pg.baseview.MyArrowItemView
        android:id="@+id/batchNo_MyView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        app:arrowItemAvatarHeight="12dp"
        app:arrowItemContent=""
        app:arrowItemShowArrow="false"
        app:arrowItemShowAvatar="false"
        app:arrowItemTitle="批次"
        app:arrowItemTitleColor="@color/text_color_444444"
        app:layout_constraintTop_toBottomOf="@id/gtin_MyView" />

    <com.example.pg.baseview.MyArrowItemView
        android:id="@+id/productDate_MyView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        app:arrowItemAvatarHeight="12dp"
        app:arrowItemContent=""
        app:arrowItemShowArrow="false"
        app:arrowItemShowAvatar="false"
        app:arrowItemTitle="生产时间"
        app:arrowItemTitleColor="@color/text_color_444444"
        app:layout_constraintTop_toBottomOf="@id/batchNo_MyView" />


</androidx.constraintlayout.widget.ConstraintLayout>